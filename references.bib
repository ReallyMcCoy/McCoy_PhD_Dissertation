journal = {Philosophical Transactions of the Royal Society B: Biological Sciences},
keywords = {Anthropology,Communal breeding,Conflict,Cooperation,Family,Matriliny},
number = {1631},
pmid = {24167311},
title = {{Reproductive competition between females in the matrilineal Mosuo of southwestern China}},
volume = {368},
year = {2013}
}
